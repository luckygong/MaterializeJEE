<!-- Put site-specific property overrides in this file. -->

<configuration>
	<property>
	    <name>mapreduce.framework.name</name>
	    <value>yarn</value>
	    <!--local:本地作业运行器  classic:经典mapreduce框架  yarn:新框架-->
	</property>
	<property>
	    <name>mapreduce.cluster.local.dir</name>
	    <value>/opt/data/cluster/hadoop/mapred/local</value>
	    <!--mapreduce中间结果保存目录，默认${hadoop.tmp.dir}/mapred/local-->
	</property>
	<property>
	    <name>mapreduce.jobhistory.address</name>
	    <value>AIRB-RD-02:10020</value>
	    <!--jobhistory地址，默认端口10020-->
	</property>
	<property>
	    <name>mapreduce.jobhistory.webapp.address</name>
	    <value>AIRB-RD-02:19888</value>
	    <!--jobhistory webapp地址，默认端口19888-->
	</property>
	<property>
	    <name>yarn.app.mapreduce.am.staging-dir</name>
	    <value>/opt/data/cluster/hadoop/yarn/staging</value>
	    <!--提交作业时使用-->
        </property>
</configuration>
